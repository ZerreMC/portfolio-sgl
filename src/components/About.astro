---
export interface Props {
  t: (key: string) => string;
}
const { t } = Astro.props;
---

<section
  id="About"
  class="flex flex-col justify-center py-16 px-[5%] md:px-[8%] bg-gradient-to-b from-black to-grayDark w-full min-h-screen"
>
  <h2 class="text-4xl font-bold mb-6 text-greenPrimary">{t("aboutTitle")}</h2>
  <div class="flex flex-col md:flex-row gap-10 md:gap-16 items-center">
    <div
      class="md:w-2/3 content-info-contact__text-info text-start animate__animated animate__fadeIn"
    >
      <p class="text-lg mb-4">
        {t("descriptionAbout1Part1")}
        <span class="font-bold text-greenPrimary"
          >{t("descriptionAbout1Part2")}</span
        >
        {t("descriptionAbout1Part3")}
        <span class="text-greenPrimary font-semibold"
          >{t("descriptionAbout1Part4")}</span
        >
        {t("descriptionAbout1Part5")}
      </p>
      <p class="text-lg mb-4">
        {t("descriptionAbout2Part1")}
        <span class="text-greenPrimary font-semibold"
          >{t("descriptionAbout2Part2")}</span
        >
        {t("descriptionAbout2Part3")}
        <span class="text-greenPrimary font-semibold"
          >{t("descriptionAbout2Part4")}</span
        >
        {t("descriptionAbout2Part5")}
      </p>
    </div>
    <div class="md:w-1/3 flex justify-center mt-6 md:mt-0">
      <img
        src="setupWorkstation.jpg"
        alt="My workstation setup"
        class="rounded-lg shadow-lg"
      />
    </div>
  </div>
</section>
