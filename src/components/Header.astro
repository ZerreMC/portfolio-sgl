---
import { ui, defaultLang } from "../i18n/ui.js";

const url = new URL(Astro.request.url);
const lang = url.searchParams.get("lang") || defaultLang;
const t = ui[lang];
---

<header
  class="fixed top-0 z-10 w-full bg-grayMedium border-b-4 border-grayDark shadow-md font-bold"
>
  <nav
    class="w-[90%] mx-auto px-6 md:px-6 py-6 flex justify-between items-center animate-fade-in"
  >
    <a href="#" class="text-3xl md:hidden">
      <span class="text-greenPrimary">&lt;</span>
      <span>SGL</span>
      <span class="text-greenPrimary">/&gt;</span>
    </a>
    <a href="#" class="text-2xl hidden md:block">
      <p>{t.name} <span class="text-greenPrimary">{t.surname}</span></p>
    </a>
    <div class="hidden md:flex space-x-6 text-grayLight ml-auto mr-[6%]">
      <a
        href="#"
        class="hover:text-greenPrimary transition-colors duration-300"
      >
        {t.home}
      </a>
      <a
        href="#About"
        class="hover:text-greenPrimary transition-colors duration-300"
      >
        {t.about}
      </a>
      <a
        href="#Stack"
        class="hover:text-greenPrimary transition-colors duration-300"
      >
        {t.stackTitle}
      </a>
      <a
        href="#Contact"
        class="hover:text-greenPrimary transition-colors duration-300"
      >
        {t.contactTitle}
      </a>
      <a> | </a>
      <a
        href="/cv/Sebastian_Gutierrez_ES.pdf"
        download
        class="hover:text-greenPrimary transition-colors duration-300"
      >
        CV
      </a>
    </div>

    <div class="flex items-center space-x-2 ml-[6%]">
      <div class="relative">
        <button
          id="languageToggle"
          class="flex items-center focus:outline-none text-grayLight"
        >
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12ZM11.9851 4.00291C11.9933 4.00046 11.9982 4.00006 11.9996 4C12.001 4.00006 12.0067 4.00046 12.0149 4.00291C12.0256 4.00615 12.047 4.01416 12.079 4.03356C12.2092 4.11248 12.4258 4.32444 12.675 4.77696C12.9161 5.21453 13.1479 5.8046 13.3486 6.53263C13.6852 7.75315 13.9156 9.29169 13.981 11H10.019C10.0844 9.29169 10.3148 7.75315 10.6514 6.53263C10.8521 5.8046 11.0839 5.21453 11.325 4.77696C11.5742 4.32444 11.7908 4.11248 11.921 4.03356C11.953 4.01416 11.9744 4.00615 11.9851 4.00291ZM8.01766 11C8.08396 9.13314 8.33431 7.41167 8.72334 6.00094C8.87366 5.45584 9.04762 4.94639 9.24523 4.48694C6.48462 5.49946 4.43722 7.9901 4.06189 11H8.01766ZM4.06189 13H8.01766C8.09487 15.1737 8.42177 17.1555 8.93 18.6802C9.02641 18.9694 9.13134 19.2483 9.24522 19.5131C6.48461 18.5005 4.43722 16.0099 4.06189 13ZM10.019 13H13.981C13.9045 14.9972 13.6027 16.7574 13.1726 18.0477C12.9206 18.8038 12.6425 19.3436 12.3823 19.6737C12.2545 19.8359 12.1506 19.9225 12.0814 19.9649C12.0485 19.9852 12.0264 19.9935 12.0153 19.9969C12.0049 20.0001 11.9999 20 11.9999 20C11.9999 20 11.9948 20 11.9847 19.9969C11.9736 19.9935 11.9515 19.9852 11.9186 19.9649C11.8494 19.9225 11.7455 19.8359 11.6177 19.6737C11.3575 19.3436 11.0794 18.8038 10.8274 18.0477C10.3973 16.7574 10.0955 14.9972 10.019 13ZM15.9823 13C15.9051 15.1737 15.5782 17.1555 15.07 18.6802C14.9736 18.9694 14.8687 19.2483 14.7548 19.5131C17.5154 18.5005 19.5628 16.0099 19.9381 13H15.9823ZM19.9381 11C19.5628 7.99009 17.5154 5.49946 14.7548 4.48694C14.9524 4.94639 15.1263 5.45584 15.2767 6.00094C15.6657 7.41167 15.916 9.13314 15.9823 11H19.9381Z"
              fill="currentColor"></path>
          </svg>
        </button>
        <div
          id="languageMenu"
          class="hidden absolute top-full right-0 mt-2 w-40 bg-grayMedium rounded-md shadow-lg menu-shadow"
        >
          <a href="?lang=en" class="block py-2 px-4 text-sm hover:bg-grayDark"
            >{t.en}</a
          >
          <a href="?lang=es" class="block py-2 px-4 text-sm hover:bg-grayDark"
            >{t.es}</a
          >
          <a href="?lang=ca" class="block py-2 px-4 text-sm hover:bg-grayDark"
            >{t.ca}</a
          >
        </div>
      </div>
      <button
        id="menuToggle"
        class="md:hidden focus:outline-none text-grayLight"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
  <div
    id="mobileMenu"
    class="md:hidden hidden absolute top-full left-0 w-full bg-grayMedium border-y-2 border-grayDark shadow-lg menu-shadow"
  >
    <a
      href="#"
      class="block py-2 px-4 text-sm hover:bg-grayDark transition-colors duration-300"
    >
      {t.home}
    </a>
    <a
      href="#About"
      class="block py-2 px-4 text-sm hover:bg-grayDark transition-colors duration-300"
    >
      {t.about}
    </a>
    <a
      href="#Stack"
      class="block py-2 px-4 text-sm hover:bg-grayDark transition-colors duration-300"
    >
      {t.stackTitle}
    </a>
    <a
      href="#Contact"
      class="block py-2 px-4 text-sm hover:bg-grayDark transition-colors duration-300"
    >
      {t.contactTitle}
    </a>
    <a
      href="/cv/Sebastian_Gutierrez_CV.pdf"
      download
      class="block py-2 px-4 text-sm hover:bg-grayDark transition-colors duration-300"
    >
      CV
    </a>
  </div>

  <script>
    const menuToggle = document.getElementById("menuToggle");
    const mobileMenu = document.getElementById("mobileMenu");
    const languageToggle = document.getElementById("languageToggle");
    const languageMenu = document.getElementById("languageMenu");

    menuToggle.addEventListener("click", () => {
      if (!languageMenu.classList.contains("hidden")) {
        languageMenu.classList.add("hidden");
      }
      mobileMenu.classList.toggle("hidden");
    });

    languageToggle.addEventListener("click", () => {
      if (!mobileMenu.classList.contains("hidden")) {
        mobileMenu.classList.add("hidden");
      }
      languageMenu.classList.toggle("hidden");
    });

    const urlParams = new URLSearchParams(window.location.search);
    const lang = urlParams.get("lang") || localStorage.getItem("lang") || "en";

    if (urlParams.get("lang")) {
      localStorage.setItem("lang", lang);
    }

    document.querySelectorAll("#languageMenu a").forEach((link) => {
      if (link.getAttribute("href").includes(`?lang=${lang}`)) {
        link.classList.add("bg-grayDark");
      }
    });
  </script>
  <style>
    #mobileMenu,
    #languageMenu {
      max-height: 90vh;
      overflow-y: auto;
      scroll-behavior: smooth;
    }
    .menu-shadow {
      box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);
    }
  </style>
</header>
