---
export interface Props {
  t: (key: string) => string;
}
const { t } = Astro.props;
const backgroundImage = "/GreyBackground.png";
---

<section
  class="relative min-h-screen flex flex-col items-center justify-center bg-cover bg-center px-4 md:px-12 overflow-auto"
  style={`background-image: url('${backgroundImage}')`}
>
  <div class="max-w-screen-lg w-full mx-auto text-center">
    <div
      class="w-64 h-64 md:w-80 md:h-80 rounded-full overflow-hidden drop-shadow-xl bg-greenPrimary animate-float mx-auto"
    >
      <img
        src="/profileImage.jpg"
        alt="A dinosaur under a starry sky"
        class="w-full h-full object-cover"
      />
    </div>
    <h1
      class="text-3xl md:text-5xl font-bold text-white mt-6 animate-fade-in break-words"
    >
      {t("heroTitlePart1")}
      <span class="text-greenPrimary">{t("heroTitlePart2")}</span>
    </h1>
    <p
      class="text-lg md:text-xl mt-4 text-gray-300 animate-fade-in break-words"
    >
      {t("heroSubtitle")}
    </p>
  </div>
</section>
